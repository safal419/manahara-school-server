{
  "kind": "collectionType",
  "collectionName": "news",
  "info": {
    "singularName": "new",
    "pluralName": "news",
    "displayName": "News"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "excerpt": {
      "type": "string"
    },
    "content": {
      "type": "blocks"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "author": {
      "type": "string"
    },
    "date": {
      "type": "date"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Education",
        "Sports",
        "Art ",
        "Events",
        "Celebration",
        "Updates"
      ]
    },
    "featured": {
      "type": "boolean"
    }
  }
}
